<?php
class SimpletestUnitTestTitleCaseTestCase extends DrupalUnitTestCase {
    public static function getInfo() {
        // Note: getInfo() strings should not be translated.
        return array(
            'name' => 'Title case unit tests',
            'description' => 'Test that get_title_case works properly.',
            'group' => 'Cool Stuff',
        );

    }

    function testGetTitleCase() {
        $result = get_title_case("rain");
        $message = "returns capitalization of single word";
        $this->assertTrue($result == "Rain", $message);

        // will not pass after getting the ignore list to pass

        // $result = get_title_case("rain in spain");
        // $message = "returns capitalization of multiple words";
        // $this->assertTrue($result == "Rain In Spain", $message);

        $result = get_title_case("rain in spain");
        $message = "does not capitalize words in ignore list";
        $this->assertTrue($result == "Rain in Spain", $message);

        $input = "in the park";
        $result = get_title_case($input);
        $message = "ignore list not applied to first word";
        $this->pass(var_export($input . ' = ' . $result, TRUE));
        $this->assertTrue($result == "In the Park", $message);

        $input = "in the park the";
        $result = get_title_case($input);
        $message = "ignore list not applied to last word";
        $this->pass(var_export($input . ' = ' . $result, TRUE));
        $this->assertTrue($result == "In the Park The", $message);


    }
}
